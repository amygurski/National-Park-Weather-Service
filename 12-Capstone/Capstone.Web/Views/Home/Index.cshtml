@model IList<Park>
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <form asp-controller="Home" asp-action="Index">
        @foreach (Park item in Model)
        {
            <div class="row">
                <div class="column home-left">
                    <a asp-controller="Home" asp-action="Detail" asp-route-parkCode=@item.ParkCode><img src="~/images/parks/@(item.ParkCode).jpg" alt="park image"></a>
                </div>
                <div class="column home-right">
                    <div id=Parkname>@item.ParkName</div>
                    <div id="description">@item.ParkDescription</div>
                </div>
            </div>
        }
    </form>
</div>
 <style>
    img {
        width:35%;
        display:inline-block
    }

    #Parkname {
        position: relative;
        width: 50%;
      /*  text-align: center; */
    }

    #description {
        width: 48%;
        vertical-align: top;
        margin-top: 20px;
    }
</style>
